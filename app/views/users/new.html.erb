<%= form_tag("/users", method: "post") do %>
  <div>
    <%= label_tag(:username) %>
    <%= text_area_tag(:username) %>
  </div>
  <div>
    <%= label_tag(:email) %>
    <%= email_field_tag(:email) %>
  </div>
  <div>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %>
  </div>
  <div>
    <%= submit_tag("submit") %>
  </div>
<% end %>

